{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/src/$1"
  },
  "coveragePathIgnorePatterns": [
    "node_modules",
    "test-config",
    "interfaces",
    "dto",
    "entity",
    "module.ts",
    "main.ts",
    "index.ts"
  ],
  "coverageReporters": ["json", "lcov", "text", "clover"],
  "testPathIgnorePatterns": ["/node_modules/", "/dist/"],
  "verbose": true,
  "detectOpenHandles": true,
  "forceExit": true,
  "dotenv": {
    "path": ".env.e2e"
  }
}
